<% content_for :title, "パスワード変更" %>

<div class="p-4 flex-grow">
  <h2 class="text-center font-bold text-xl">パスワード変更</h2>

  <div class="flex justify-center items-center">
    <div class="p-4 w-full max-w-md">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "w-full" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field mb-4 text-center mt-4">
          <%= f.label :password, "新しいパスワード" %><br />
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %>文字以上)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full input input-bordered" %>
        </div>

        <div class="field mb-4 text-center">
          <%= f.label :password_confirmation, "パスワード確認" %><br />
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full input input-bordered" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "変更", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
