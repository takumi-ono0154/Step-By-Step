<div class="p-4">
  <h2 class="text-center mb-4 font-bold text-xl">Change your password</h2>

  <div class="flex justify-center items-center min-h-screen">
    <div class="p-4 w-full max-w-md">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put, class: "w-full" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>
        <%= f.hidden_field :reset_password_token %>

        <div class="field mb-4">
          <%= f.label :password, "New password", class: "block mb-2" %>
          <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em><br />
          <% end %>
          <%= f.password_field :password, autofocus: true, autocomplete: "new-password", class: "w-full border p-2 rounded" %>
        </div>

        <div class="field mb-4">
          <%= f.label :password_confirmation, "Confirm new password", class: "block mb-2" %>
          <%= f.password_field :password_confirmation, autocomplete: "new-password", class: "w-full border p-2 rounded" %>
        </div>

        <div class="actions text-center mt-4">
          <%= f.submit "Change my password", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>

