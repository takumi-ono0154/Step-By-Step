<% content_for :title, "パスワード変更" %>

<div class="p-4 flex-grow">
  <h2 class="text-center font-bold text-xl">パスワードをお忘れですか？</h2>

  <div class="flex justify-center items-center">
    <div class="p-4">
      <%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post, class: "w-full" }) do |f| %>
        <%= render "devise/shared/error_messages", resource: resource %>

        <div class="field mb-4 text-center mt-4">
          <%= f.label :email, "メールアドレス" %><br />
          <%= f.email_field :email, autofocus: true, autocomplete: "email", class: "w-full input input-bordered" %>
        </div>

        <div class="actions text-center">
          <%= f.submit "パスワード変更メールを送る", class: "btn btn-primary" %>
        </div>
      <% end %>
    </div>
  </div>

  <div class="text-center mt-4">
    <%= render "devise/shared/links" %>
  </div>
</div>
